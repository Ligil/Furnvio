<form action="/admin/saveEditCategory/{{category.id}}?_method=PUT" method="post" autocomplete="off">
    <input type="hidden" name="_method" value="PUT">

    <div class="d-flex">
        <div class="col-6">
            <div class="form-group mb-4">
                <label class="font-italic" for="categoryName">Category Name</label>
                <input class="form-control" id="categoryName" name="categoryName" onblur='titleCase(this)' value="{{category.category}}">
            </div>        
            

            <div class="form-group mb-4">
                <label class="font-italic" for="description">Category Description</label>
                <textarea class="form-control" id="description" name="description" rows="7">{{category.categoryDescription}}</textarea>
            </div>
            
            <button id="butAddFurniture" type="submit" class="btn amber darken-4 text-white">Submit</button>
        </div>
        <div class="col-6">
            <!-- Image -->
            <img id="image" src="{{category.categoryImageURL}}" alt="" class="border img-thumbnail img-fluid" style="width:100%">
            <div class="container">
                <br>
                {{!-- Actual input button --}}
                <input type="file" id="categoryImageUpload" name="categoryImageUpload" accept="image/png, image/jpeg, image/jpg, image/gif, image/webp">

                {{!â€”- Hidden field to submit URL of image to the server --}}
                <input id="imageURL" type="hidden" name="imageURL" value="{{category.categoryImageURL}}">
                <div class="font-weight-bold text-danger small" id="imageErr" style="display:none"></div>
            </div>
        </div>
    </div>

</form>