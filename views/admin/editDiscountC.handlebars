<div class="container mb-4">
	<div class="card card-body">
		<h3>Add Discount Code</h3>
		<form action="" method="post" id="addVideo" autocomplete="off">
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group mb-4">
						<label class="font-italic" for="DiscountC">Discount Code</label>
                        <input type="text"  id="DiscountC" name="DiscountC" class="form-control form-control-lg" placeholder="Enter Discount Code..." value="{{code.discountCode}}" required >
                        <div id="choices" class="choices" style="display: block"></div>	
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col-sm-4">
                            <label class="font-italic" for="subDis">For subtracting based discount</label>
                            <input type="number" min='0' step="0.01" class="form-control" id="subDis" name="subDis" rows="7" placeholder="" value="{{code.subDis}}">
                        </div>
                        <div class="col-sm-4">
                            <label class="font-italic" for="perDis">For percentage based discount</label>
                            <input type="number" min='0' step="0.01" class="form-control" id="perDis" name="perDis" rows="7" placeholder="" value="{{code.perDis}}">
                        </div>
                        <div class="col-sm-1"></div>
                        <div class="col-sm-2 mt-3 ">
			                <button id="" type="submit" class="btn btn-yellow text-white">Submit</button>
                        </div>
                    </div>
                </div>  
			</div>



		</form>
	</div>
</div>
