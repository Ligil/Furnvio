<div id="furniture-summary">
    <span>
        <a href="/">Home</a> / 
        <a href="/furniture/categories">Categories</a> : 
    </span>
    <span>Here are our different categories of furniture.</span>
</div>
<div class="d-flex" style="flex-flow: row wrap">
    {{#each categories}}
        <div class="p-2 col-sm-12 col-md-6 col-lg-3">
            <div class="card themeSearchImage supercenter position-relative" style="height:100%">
                <div class="position-relative">
                    <a class="themeOverlay" href="/furniture/categories/{{this.category}}">Click to view</a>
                    <img class="card-img-top border-bottom" src="{{this.categoryImageURL}}" alt="Card image cap">
                </div>

                <div class="card-body">
                    <h5 class="card-title">{{this.category}}</h5>
                    <p class="card-text">{{this.categoryDescription}}</p>
                </div>

            </div>
        </div>
    {{else}}
        <p>No Categories in datbase</p>
    {{/each}}
</div>